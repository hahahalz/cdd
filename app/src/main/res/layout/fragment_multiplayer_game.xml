<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".View.MultiplayerGameFragment">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:padding="16dp"
		android:background="@drawable/bg"> <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:orientation="vertical"
		android:gravity="center_horizontal|bottom"
		android:paddingBottom="8dp">

		<TextView
			android:id="@+id/tv_player2_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="玩家2"
			android:textColor="@android:color/white"
			android:textStyle="bold"
			android:textSize="18sp"/>

		<TextView
			android:id="@+id/tv_player2_cards_count"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="手牌: N/A"
			android:textColor="@android:color/white"
			android:textSize="14sp"/>

		<LinearLayout
			android:id="@+id/ll_player2_hand"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:layout_marginTop="4dp"/>

		<LinearLayout
			android:id="@+id/ll_player2_played"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_vertical"
			android:layout_marginTop="4dp"/>

	</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="2"
			android:orientation="vertical"
			android:gravity="center">

			<TextView
				android:id="@+id/tv_current_turn"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="当前回合: 玩家1"
				android:textColor="@android:color/white"
				android:textStyle="bold"
				android:textSize="20sp"
				android:layout_marginBottom="8dp"/>

			<TextView
				android:id="@+id/tv_last_played_cards"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="上次出牌: 无"
				android:textColor="@android:color/white"
				android:textSize="16sp"
				android:layout_marginBottom="16dp"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center"
				android:layout_marginBottom="8dp">
				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="vertical"
					android:gravity="center_horizontal">
					<TextView
						android:id="@+id/tv_player3_name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="玩家3"
						android:textColor="@android:color/white"
						android:textStyle="bold"
						android:textSize="16sp"/>
					<TextView
						android:id="@+id/tv_player3_cards_count"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="手牌: N/A"
						android:textColor="@android:color/white"
						android:textSize="12sp"/>
					<LinearLayout
						android:id="@+id/ll_player3_hand"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:layout_marginTop="4dp"/>
					<LinearLayout
						android:id="@+id/ll_player3_played"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:layout_marginTop="4dp"/>
				</LinearLayout>

				<LinearLayout
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:orientation="vertical"
					android:gravity="center_horizontal">
					<TextView
						android:id="@+id/tv_player4_name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="玩家4"
						android:textColor="@android:color/white"
						android:textStyle="bold"
						android:textSize="16sp"/>
					<TextView
						android:id="@+id/tv_player4_cards_count"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="手牌: N/A"
						android:textColor="@android:color/white"
						android:textSize="12sp"/>
					<LinearLayout
						android:id="@+id/ll_player4_hand"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:layout_marginTop="4dp"/>
					<LinearLayout
						android:id="@+id/ll_player4_played"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
						android:gravity="center_vertical"
						android:layout_marginTop="4dp"/>
				</LinearLayout>
			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:orientation="vertical"
			android:gravity="center_horizontal|top"
			android:paddingTop="8dp">

			<TextView
				android:id="@+id/tv_player1_name"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="玩家1 (你)"
				android:textColor="@android:color/white"
				android:textStyle="bold"
				android:textSize="18sp"/>

			<TextView
				android:id="@+id/tv_player1_cards_count"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="手牌: 13"

				android:textSize="14sp"/>

			<LinearLayout
				android:id="@+id/ll_player1_hand"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:layout_marginTop="4dp"/>

			<LinearLayout
				android:id="@+id/ll_player1_played"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:gravity="center_vertical"
				android:layout_marginTop="4dp"/>

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="16dp">

				<Button
					android:id="@+id/btn_play_cards"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="出牌"
					android:layout_marginEnd="16dp"/>

				<Button
					android:id="@+id/btn_pass"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="过牌"/>

				<Button
					android:id="@+id/btn_ready"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="准备"
					android:layout_marginStart="16dp"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>

	<ImageView
		android:id="@+id/btn_back"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginStart="16dp"
		android:layout_marginTop="16dp"
		android:contentDescription="返回"
		android:scaleType="fitCenter"
		android:src="@drawable/ic_back"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</FrameLayout>